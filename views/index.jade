extends layout

block content
    html


    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Войдите в систему
                    div.account-wall
                        img(class='profile-img', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
                        form(class='form-signin', action='/login', method='POST')
                            input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
                            input(type='password', name='password' class='form-control', placeholder='Пароль', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Войти в систему
                            span.clearfix
                    a(href='/signup', class='text-center new-account') Создайте аккаунт
                    #message
                    if message
                        h1.text-center.error-message #{message}
    #footer
        .container
            .row.centered
                p ул. Некрасова, 5Б, Белгород, Белгородская обл., 308007
    script(src='http://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js')
    script(src='../js/bootstrap.min.js')