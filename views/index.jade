extends layout

block content
    html
        body
            .navbar.navbar-inverse.navbar-fixed-top
                .container
                    .navbar-header.image
                        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
                            span.icon-bar
                            span.icon-bar
                            span.icon-bar
                        a.navbar-brand(href='main') Организация шахматных турниров
                    .navbar-collapse.collapse
                        ul.nav.navbar-nav.navbar-right
                            li
                                a(href='register') Регистрация
                            li
                                a(href='index') Вход


    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Войдите в систему
                    div.account-wall
                        img(class='profile-img', src='https://lh5.googleusercontent.com/-b0-k99FZlyE/AAAAAAAAAAI/AAAAAAAAAAA/eu7opA4byxI/photo.jpg?sz=120')
                        form(class='form-signin', action='/login', method='POST')
                            input(type='text', name='username' class='form-control', placeholder='Email',required, autofocus)
                            input(type='password', name='password' class='form-control', placeholder='Пароль', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Войти в систему
                            span.clearfix
                    a(href='/signup', class='text-center new-account') Создайте аккаунт
                    #message
                    if message
                        h1.text-center.error-message #{message}
                        #footer
                            .container
                                .row.centered
                                    a(href='#')
                                        i.fa.fa-twitter
                                    a(href='#')
                                        i.fa.fa-facebook
                                    a(href='https://vk.com')
                                        i.fa.fa-vk
                                    a(href='http://instagram.com')
                                        i.fa.fa-instagram
                                    a(href='#')
                                        i.fa.fa-telegram